<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Folklore" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/seed</item>
    </style>

    <style name="Theme.Folklore.Starting" parent="Theme.SplashScreen.IconBackground">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/seed</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Folklore</item>
    </style>
</resources>